@model PROG2230_Byounguk_Min.Models.TransactionRecord

@{
    ViewData["Title"] = "Transactions";
}

<h2>@Html.DisplayFor(model => model.CompanyModel.CompanyName)</h2>
<h2>@Html.DisplayFor(model => model.CompanyModel.Ticker)</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SharePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyModel.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionType.Name)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Quantity)
            </td>
            <td>
                @Html.DisplayFor(model => model.SharePrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@Model.CompanyId">
                    @Html.DisplayFor(model => model.CompanyModel.CompanyName)
                </a>
            </td>
            <td>
                @Html.DisplayFor(model => model.TransactionType.Name)
            </td>
            <td>
                <a asp-controller="TransactionRecords" asp-action="Edit" asp-route-id="@Model.TransactionRecordId">Edit</a> |
                <a asp-controller="TransactionRecords" asp-action="Details" asp-route-id="@Model.TransactionRecordId">Details</a> |
                <a asp-controller="TransactionRecords" asp-action="Delete" asp-route-id="@Model.TransactionRecordId">Delete</a>
            </td>
        </tr>

    </tbody>
</table>
